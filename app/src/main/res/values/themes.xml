<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Fiestamas" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- background color of the dialog -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- color of the date picker header and other elements -->
        <item name="colorAccent">@color/pink_fiestamas</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/pink_fiestamas</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
